@model TbSettings

@{
    ViewData["Title"] = "Edit Settings";
}

<div class="container mt-4">
    <h2>Edit Website Settings</h2>
    <hr />

    <form asp-action="Save" asp-controller="Settings" method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="form-group">
            <label asp-for="WebsiteName"></label>
            <input asp-for="WebsiteName" class="form-control" required />
            <span asp-validation-for="WebsiteName" class="text-danger"></span>
        </div>

   
        <div class="form-group">
            <label asp-for="WebsiteDescription"></label>
            <textarea asp-for="WebsiteDescription" class="form-control" required></textarea>
            <span asp-validation-for="WebsiteDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FacebookLink"></label>
            <input asp-for="FacebookLink" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="GoogleLink"></label>
            <input asp-for="GoogleLink" class="form-control" required />
        </div>
        
        <div class="form-group">
            <label asp-for="TwitterLink"></label>
            <input asp-for="TwitterLink" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="YoutubeLink"></label>
            <input asp-for="YoutubeLink" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="InstgramLink"></label>
            <input asp-for="InstgramLink" class="form-control" required/>
        </div>

        <div class="form-group">
            <label asp-for="ContactNumber"></label>
            <input asp-for="ContactNumber" class="form-control" required />

        </div>

        <hr />
        <h4>Images</h4>

        <!-- Logo Upload -->
        <div class="form-group">
            <label>Logo</label><br />
            <img src="@Model.Logo" alt="Logo" class="img-thumbnail mb-2" style="max-height:100px;" />
            <input type="file" name="LogoFile" class="form-control-file" />
        </div>

        <!-- Middle Banner Upload -->
        <div class="form-group">
            <label>Middle Banner</label><br />
            <img src="@Model.MiddleBanner" alt="Middle Banner" class="img-thumbnail mb-2" style="max-height:100px;" />
            <input type="file" name="MiddleBannerFile" class="form-control-file" />
        </div>

        <!-- Last Banner Upload -->
        <div class="form-group">
            <label>Last Banner</label><br />
            <img src="@Model.LastBanner" alt="Last Banner" class="img-thumbnail mb-2" style="max-height:100px;" />
            <input type="file" name="LastBannerFile" class="form-control-file" />
        </div>

        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" asp-controller="Setting" class="btn btn-secondary">Cancel</a>
    </form>
</div>

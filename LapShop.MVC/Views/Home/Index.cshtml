<!-- Product section -->
<section class="pt-0 section-b-space ratio_asos">
    <div class="container">
        <div class="row game-product grid-products">

            @foreach (var item in Model.AllItems)
            {
                <div class="product-box col-xl-2 col-lg-3 col-sm-4 col-6">
                <partial name="_ItemBox" model="@item" />
                </div>
            }


        </div>
    </div>
</section>
<!-- Product section end -->
<!-- Parallax banner -->
<section class="p-0">
    <div class="full-banner parallax text-center p-right">
        <img src="~/Frontend/images/parallax/28.jpg" alt="" class="bg-img blur-up lazyload">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="banner-contain">
                        <h2>sale</h2>
                        <h3>fashion trends</h3>
                        <h4>special offer</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Parallax banner end -->
<!-- product section start -->
<section class="tools_product bg-title section-b-space">
    <div class="container">
        <div class="row multiple-slider">
            <div class="col-xl-4 col-lg-4 col-md-12">
                <div class="theme-card">
                    <h5 class="title-border">Under $20 | Free delivery</h5>
                    <div class="offer-slider slide-1">
                        <div>
                            @foreach (var item in Model.FreeDelivery)
                            {
                                <div class="media">
                                    <a href="product-page(no-sidebar).html">
                                        <img class="img-fluid blur-up lazyload"
                                             src="~/Uploads/Items/@item.ImageName">
                                    </a>
                                    <div class="media-body align-self-center">
                                        <div class="rating">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <a href="product-page(no-sidebar).html">
                                            <h6> @item.ItemName</h6>
                                        </a>
                                        <h4>$@item.SalesPrice <del>$@item.PurchasePrice</del></h4>
                                    </div>
                                </div>
                            }

                        </div>
                    
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-lg-8 col-md-12">
                <div class="theme-tab">
                    <div class="bg-title-part">
                        <h5 class="title-border">RECOMMENDATIONS FOR YOU</h5>
                        <ul class="tabs tab-title">
                            <li class="current">
                                <a href="tab-4">New Products</a>
                            </li>
                            <li class="">
                                <a href="tab-5">Featured Products</a>
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content-cls ratio_asos">
                        <div id="tab-4" class="tab-content active default">
                            <div class="product-4 game-product product-m no-arrow">

                                @foreach (var item in Model.RecommendedItems)
                                {

                                    <partial name="_ItemBox" model="@item" />

        
                                }


                            </div>

                        </div>
                        <div id="tab-5" class="tab-content">
                            <div class="product-4 game-product product-m no-arrow">
                                @foreach (var item in Model.FeautureItems)
                                {
                                    <partial name="_ItemBox" model="@item" />
                                }

               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="banner-tools">
                    <img src="~/Frontend/images/offer-banner1.jpg" alt="" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product section end -->
